    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/bin/cli.js",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "yarn",
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/bin",
            "args": [
                "--emitter",
                "ts",
                "--url",
                "http://localhost:5000/swagger/v1/swagger.json",
                "--extensions",
                "x-schema,x-primitive-mapping"
            ]
        }
    ]
}
